<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    >
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/description_avatar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/avatarImage">
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:textSize="16sp"
            tools:text = "Ivan Brazhnikov"
            android:textColor="@color/colorUserFullNameLight"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto-Regular"
            android:textSize="14sp"
            android:layout_below="@id/nameTextView"
            android:layout_alignStart="@id/nameTextView"
            tools:text = "Online"
            android:textColor="@color/colorUserStatusLight"
            android:maxLines="1"
            />
    </RelativeLayout>

</RelativeLayout>